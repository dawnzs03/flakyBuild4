definition {

	macro addRemoteServer {
		Click(locator1 = "Button#PLUS");

		Type(
			locator1 = "PublicationsRemoteServer#REMOTE_SERVER_NAME",
			value1 = ${remoteServerName});

		if (isSet(remoteServerDescription)) {
			Type(
				locator1 = "PublicationsRemoteServer#REMOTE_SERVER_DESCRIPTION",
				value1 = ${remoteServerDescription});
		}

		Type(
			locator1 = "PublicationsRemoteServer#REMOTE_SERVER_URL",
			value1 = ${remoteServerURL});

		Type(
			locator1 = "PublicationsRemoteServer#REMOTE_SERVER_CLIENT_ID",
			value1 = ${remoteServerClientId});

		Type(
			locator1 = "PublicationsRemoteServer#REMOTE_SERVER_CLIENT_SECRET",
			value1 = ${remoteServerClientSecret});

		AssertClick(
			locator1 = "Button#SUBMIT",
			value1 = "Submit");

		Alert.viewSuccessMessage();
	}

	macro deleteRemoteServer {
		Click(
			key_remoteServerName = ${remoteServerName},
			locator1 = "PublicationsRemoteServer#REMOTE_SERVER_DROPDOWN_MENU");

		MenuItem.clickNoError(menuItem = "Delete");

		AssertConfirm(value1 = "Are you sure you want to delete this remote server?");

		Alert.viewSuccessMessage();
	}

	macro editRemoteServer {
		Click(
			key_remoteServerName = ${remoteServerName},
			locator1 = "PublicationsRemoteServer#REMOTE_SERVER_DROPDOWN_MENU");

		MenuItem.click(menuItem = "Edit");

		if (isSet(remoteServerNameEdit)) {
			Type(
				locator1 = "PublicationsRemoteServer#REMOTE_SERVER_NAME",
				value1 = ${remoteServerNameEdit});
		}

		if (isSet(remoteServerDescriptionEdit)) {
			Type(
				locator1 = "PublicationsRemoteServer#REMOTE_SERVER_DESCRIPTION",
				value1 = ${remoteServerDescriptionEdit});
		}

		if (isSet(remoteServerURLEdit)) {
			Type(
				locator1 = "PublicationsRemoteServer#REMOTE_SERVER_URL",
				value1 = ${remoteServerURLEdit});
		}

		if (isSet(remoteServerClientId)) {
			Type(
				locator1 = "PublicationsRemoteServer#REMOTE_SERVER_CLIENT_ID",
				value1 = ${remoteServerClientId});
		}

		if (isSet(remoteServerClientSecret)) {
			Type(
				locator1 = "PublicationsRemoteServer#REMOTE_SERVER_CLIENT_SECRET",
				value1 = ${remoteServerClientSecret});
		}

		AssertClick(
			locator1 = "Button#SUBMIT",
			value1 = "Submit");

		Alert.viewSuccessMessage();
	}

	macro gotoRemoteServers {
		PublicationsNavigator.openPublicationsAdmin();

		Click.waitForMenuToggleJSClick(locator1 = "Publications#PUBLICATIONS_ELLIPSIS");

		MenuItem.click(menuItem = "Remote Servers");
	}

}