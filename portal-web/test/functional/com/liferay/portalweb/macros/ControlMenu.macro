definition {

	macro viewHeaderDraftTitle {
		AssertVisible(
			key_headerTitle = ${headerTitle},
			locator1 = "ControlMenu#HEADING_DRAFT");
	}

	macro viewHeaderTitle {
		AssertTextEquals(
			locator1 = "ControlMenu#HEADING",
			value1 = ${headerTitle});
	}

	macro viewHeaderTitleLabel {
		AssertTextEquals(
			locator1 = "ControlMenu#HEADING_LABEL",
			value1 = ${headerTitleLabel});
	}

	macro viewHeaderTitleNotPresent {
		AssertTextNotEquals(
			locator1 = "ControlMenu#HEADING",
			value1 = ${headerTitle});
	}

}