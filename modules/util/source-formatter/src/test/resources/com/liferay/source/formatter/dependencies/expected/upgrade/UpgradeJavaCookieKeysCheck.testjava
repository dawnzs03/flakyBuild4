package com.liferay.source.formatter.dependencies.upgrade;

import com.liferay.portal.kernel.cookies.constants.CookiesConstants;
import com.liferay.portal.kernel.cookies.CookiesManagerUtil;


/**
 * @author Michael Cavalcanti
 */
public class UpgradeJavaCookieKeysCheck {

	public String getCookie(String cookieName) {
		if (cookieName.equals(CookiesConstants.NAME_ID) ||
			cookieName.equals(CookiesConstants.NAME_USER_UUID)) {

			return CookiesManagerUtil.getCookieValue(CookiesConstants.NAME_COMMERCE_CONTINUE_AS_GUEST, httpServletRequest);
		}

		return null;
	}

}