definition {

	macro changeStatusToAwaitingPaymentConfirmation {
		for (var userApproval : list "Manager,Finance") {
			User.logoutAndLoginPG(
				userLoginEmailAddress = "${userApproval}@liferay.com",
				userLoginFullName = "${userApproval} User");

			EVPUtils.gotoEVP();

			EVPNavigator.goToNavItem(navItem = "Request");

			EVPRequest.goToRequestOption(
				key_option = "Review",
				organizationName = "Organization Test");

			EVPUtils.changeStatus(
				button = "Approve",
				typeMessage = "Your organization has been approved!");
		}
	}

	macro confirmPayment {
		var currentDate = DateUtil.getFormattedDate(${dateRange}, ${dateFormat});

		if (${paymentDate} == "true") {
			Type.sendKeys(
				inputFieldId = "date-input",
				locator1 = "TextInput#INPUT_ID",
				value1 = ${currentDate});
		}

		if (isSet(paymentValue)) {
			Type(
				inputFieldId = "date-input",
				locator1 = "TextInput#INPUT_ID",
				value1 = ${paymentValue});
		}

		UploadCommonFile.uploadCommonFileHiddenNoMouseOver(
			locator1 = "TextInput#FILE",
			value1 = ${document});

		if (${cancelButton} == "true") {
			Click(locator1 = "Button#CANCEL");
		}
		else {
			Click(locator1 = "Button#SAVE");
		}

		EVPRequest.viewSuccessMessageRequest();
	}

	macro fillRequestForm {
		WaitForPageLoad();

		if (isSet(phoneNumber)) {
			Type(
				key_fieldLabel = "Phone Number",
				locator1 = "TextInput#GENERIC_TEXT_INPUT",
				value1 = ${phoneNumber});
		}

		if (isSet(organization)) {
			Click(
				key_fieldLabel = "Organization",
				locator1 = "TextInput#GENERIC_TEXT_INPUT");

			Click(
				key_text = ${organization},
				locator1 = "EVPUtils#ORGANIZATION_DROPDOWN");
		}

		if (${requestType} == "Grant") {
			Click(
				key_fieldLabel = "EVP Request type",
				locator1 = "TextInput#GENERIC_TEXT_INPUT");

			Click(
				key_text = ${requestType},
				locator1 = "EVPUtils#DROPDOWN_MENU");

			Click(
				key_fieldLabel = "EVP Grant Request Type",
				locator1 = "TextInput#GENERIC_TEXT_INPUT");

			Click(
				key_text = ${grantRequestType},
				locator1 = "EVPUtils#DROPDOWN_MENU");

			Type(
				key_fieldLabel = "Grant Amount",
				locator1 = "TextInput#GENERIC_NUMBER_INPUT",
				value1 = ${grantAmount});
		}

		if (${requestType} == "Service") {
			Click(
				key_fieldLabel = "EVP Request type",
				locator1 = "TextInput#GENERIC_TEXT_INPUT");

			Click(
				key_text = ${requestType},
				locator1 = "EVPUtils#DROPDOWN_MENU");

			Type(
				key_fieldLabel = "Manager Email Address",
				locator1 = "TextInput#GENERIC_TEXT_INPUT",
				value1 = ${managerEmailAdress});

			Type(
				key_fieldLabel = "Total Hours Requested",
				locator1 = "TextInput#GENERIC_NUMBER_INPUT",
				value1 = ${totalHoursRequested});

			Type(
				key_fieldLabel = "startDate",
				locator1 = "TextInput#GENERIC_TEXT_INPUT",
				value1 = ${serviceStartDate});

			Type(
				key_fieldLabel = "endDate",
				locator1 = "TextInput#GENERIC_TEXT_INPUT",
				value1 = ${serviceEndDate});
		}

		if (isSet(requestPurposes)) {
			Click(
				key_fieldLabel = "EVP Request Purposes",
				locator1 = "TextInput#GENERIC_TEXT_INPUT");

			Click(
				key_text = ${requestPurposes},
				locator1 = "EVPUtils#DROPDOWN_MENU");
		}

		if (isSet(requestBehalf)) {
			Click(
				key_fieldLabel = "EVP Request Behalf",
				locator1 = "TextInput#GENERIC_TEXT_INPUT");

			Click(
				key_text = ${requestBehalf},
				locator1 = "EVPUtils#DROPDOWN_MENU");
		}

		if (isSet(requestDescription)) {
			Type(
				key_fieldLabel = "Request Description",
				locator1 = "TextInput#GENERIC_TEXT_INPUT",
				value1 = ${requestDescription});
		}

		ScrollWebElementIntoView(locator1 = "Button#SUBMIT");

		Button.clickSubmitButton();
	}

	macro goToCreateRequest {
		EVPNavigator.goToNavItem(navItem = "Request");

		WaitForPageLoad();

		Button.click(button = "Create a Request");
	}

	macro goToRequestOption {
		WaitForPageLoad();

		Click(
			locator1 = "EVPRequest#REQUEST_KEBAB",
			organizationName = ${organizationName});

		MenuItem.click(menuItem = ${key_option});
	}

	macro verifyFieldsName {
		AssertElementPresent(
			key_name = ${key_field},
			locator1 = "EVPRequest#FIELD_NAME");
	}

	macro viewRequestDetails {
		if (isSet(organizationName)) {
			AssertElementPresent(
				key_name = ${organizationName},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(dateCreated)) {
			var dateCreated = DateUtil.getFormattedDate("+1", "M/dd/yy");

			AssertElementPresent(
				key_name = ${dateCreated},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(requestType)) {
			AssertElementPresent(
				key_name = ${requestType},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(requestDescription)) {
			AssertElementPresent(
				key_name = ${requestDescription},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(serviceHours)) {
			AssertElementPresent(
				key_name = ${serviceHours},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(serviceStart)) {
			AssertElementPresent(
				key_name = ${serviceStart},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(serviceEndDate)) {
			AssertElementPresent(
				key_name = ${serviceEndDate},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(grantType)) {
			AssertElementPresent(
				key_name = ${grantType},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(grantValue)) {
			AssertElementPresent(
				key_name = ${grantValue},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}

		if (isSet(paymentDate)) {
			var dateValue = DateUtil.getFormattedDate(0, "MM/dd/yy");

			AssertElementPresent(
				key_name = ${paymentDate},
				locator1 = "EVPRequest#DETAIL_FIELD_NAME");
		}
	}

	macro viewSuccessMessageRequest {
		while (IsElementPresent(locator1 = "Message#EMPTY_INFO")) {
			AssertTextEquals(
				locator1 = "Message#EMPTY_INFO",
				value1 = "Thank you. Your information was successfully received.");
		}
	}

}