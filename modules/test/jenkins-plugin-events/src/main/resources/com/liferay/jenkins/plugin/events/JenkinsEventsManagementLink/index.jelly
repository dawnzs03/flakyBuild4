<?jelly escape-by-default="true"?>

<j:jelly xmlns:f="/lib/form" xmlns:j="jelly:core" xmlns:l="/lib/layout">
	<l:layout title="jenkins-events">
		<l:side-panel>
			<l:tasks>
				<l:task href="${rootURL}/" icon="icon-md icon-up" title="Back to Dashboard" />
				<l:task href="${rootURL}/manage" icon="icon-setting icon-md" title="Manage Jenkins" />
			</l:tasks>
		</l:side-panel>
		<l:main-panel>
			<div>
				<div>
					<h1>Jenkins Events</h1>
				</div>

				<f:form action="jenkinsEventsConfiguration" method="post" name="jenkinsEventsConfiguration">
					<f:entry title="URL">
						<f:textbox name="url" value="${it.jenkinsEventsDescriptor.getUrl()}" />
					</f:entry>
					<f:entry title="Inbound Queue Name">
						<f:textbox name="inboundQueueName" value="${it.jenkinsEventsDescriptor.getInboundQueueName()}" />
					</f:entry>
					<f:entry title="Outbound Queue Name">
						<f:textbox name="outboundQueueName" value="${it.jenkinsEventsDescriptor.getOutboundQueueName()}" />
					</f:entry>
					<f:entry title="User Name">
						<f:textbox name="userName" value="${it.jenkinsEventsDescriptor.getUserName()}" />
					</f:entry>
					<f:entry title="User Password">
						<f:textbox name="userPassword" value="${it.jenkinsEventsDescriptor.getUserPassword()}" />
					</f:entry>
					<f:section title="Build Events">
						<f:entry title="BUILD_COMPLETED">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('BUILD_COMPLETED')}" name="BUILD_COMPLETED" />
						</f:entry>
						<f:entry title="BUILD_STARTED">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('BUILD_STARTED')}" name="BUILD_STARTED" />
						</f:entry>
					</f:section>
					<f:section title="Computer Events">
						<f:entry title="COMPUTER_BUSY">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('COMPUTER_BUSY')}" name="COMPUTER_BUSY" />
						</f:entry>
						<f:entry title="COMPUTER_IDLE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('COMPUTER_IDLE')}" name="COMPUTER_IDLE" />
						</f:entry>
						<f:entry title="COMPUTER_OFFLINE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('COMPUTER_OFFLINE')}" name="COMPUTER_OFFLINE" />
						</f:entry>
						<f:entry title="COMPUTER_ONLINE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('COMPUTER_ONLINE')}" name="COMPUTER_ONLINE" />
						</f:entry>
						<f:entry title="COMPUTER_TEMPORARILY_OFFLINE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('COMPUTER_TEMPORARILY_OFFLINE')}" name="COMPUTER_TEMPORARILY_OFFLINE" />
						</f:entry>
						<f:entry title="COMPUTER_TEMPORARILY_ONLINE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('COMPUTER_TEMPORARILY_ONLINE')}" name="COMPUTER_TEMPORARILY_ONLINE" />
						</f:entry>
					</f:section>
					<f:section title="Queue Events">
						<f:entry title="QUEUE_ITEM_ENTER_BLOCKED">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_ENTER_BLOCKED')}" name="QUEUE_ITEM_ENTER_BLOCKED" />
						</f:entry>
						<f:entry title="QUEUE_ITEM_ENTER_BUILDABLE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_ENTER_BUILDABLE')}" name="QUEUE_ITEM_ENTER_BUILDABLE" />
						</f:entry>
						<f:entry title="QUEUE_ITEM_ENTER_WAITING">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_ENTER_WAITING')}" name="QUEUE_ITEM_ENTER_WAITING" />
						</f:entry>
						<f:entry title="QUEUE_ITEM_LEAVE_BLOCKED">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_LEAVE_BLOCKED')}" name="QUEUE_ITEM_LEAVE_BLOCKED" />
						</f:entry>
						<f:entry title="QUEUE_ITEM_LEAVE_BUILDABLE">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_LEAVE_BUILDABLE')}" name="QUEUE_ITEM_LEAVE_BUILDABLE" />
						</f:entry>
						<f:entry title="QUEUE_ITEM_LEAVE_WAITING">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_LEAVE_WAITING')}" name="QUEUE_ITEM_LEAVE_WAITING" />
						</f:entry>
						<f:entry title="QUEUE_ITEM_LEFT">
							<f:checkbox checked="${it.jenkinsEventsDescriptor.containsEventTrigger('QUEUE_ITEM_LEFT')}" name="QUEUE_ITEM_LEFT" />
						</f:entry>
					</f:section>
					<f:entry>
						<f:submit value="Save" />
					</f:entry>
				</f:form>
			</div>
		</l:main-panel>
	</l:layout>
</j:jelly>