			Navigator.openSiteURL(siteName = "Testray 2");

			Testray.changePagination(quantity = 150);

			TestrayManage.selectTableRowOption(
				rowOption = "Manage Product Versions",
				tableEntry = ${projectName});
		}

		task ("When the user delete the product version") {
			Testray.deleteItem(itemName = ${productVersion});
		}

		task ("Then the user can not see the product version in the table") {
			Testray.viewTableEntryListNotPresent(listEntry = ${productVersion});
		}
	}

