definition {

	macro createCases {
		LexiconEntry.gotoAdd();

		if (isSet(caseName)) {
			PortletEntry.inputName(name = ${caseName});
		}

		if (isSet(priority)) {
			Select(
				locator1 = "Select#SELECT_ID",
				selectFieldId = "priority",
				value1 = ${priority});
		}

		if (isSet(caseType)) {
			Select(
				locator1 = "Select#SELECT_ID",
				selectFieldId = "caseTypeId",
				value1 = ${caseType});
		}

		if (isSet(component)) {
			Select(
				locator1 = "Select#SELECT_ID",
				selectFieldId = "componentId",
				value1 = ${component});
		}

		if (isSet(duration)) {
			PortletEntry.inputNumber(
				fieldLabel = "Estimated Duration",
				number = ${duration});
		}

		if (isSet(description)) {
			Type(
				locator1 = "TextArea#DESCRIPTION",
				value1 = ${description});
		}

		if (isSet(steps)) {
			Type(
				key_text = "steps",
				locator1 = "TextArea#ANY",
				value1 = ${steps});
		}

		if (isSet(addAnotherCase)) {
			Click.clickAtNotVisible(
				key_checkboxOption = ${addAnotherCase},
				locator1 = "Checkbox#ENABLE_CHECKBOX_VIA_SPAN");

			Button.clickSave();

			Click.clickAtNotVisible(
				key_checkboxOption = ${addAnotherCase},
				locator1 = "Checkbox#ENABLE_CHECKBOX_VIA_SPAN");

			Button.clickSave();
		}
		else {
			Button.clickSave();
		}
	}

	macro editCases {
		if (isSet(newName)) {
			PortletEntry.inputName(name = ${newName});
		}

		if (isSet(priority)) {
			Select(
				locator1 = "Select#SELECT_ID",
				selectFieldId = "priority",
				value1 = ${priority});
		}

		if (isSet(caseType)) {
			Select(
				locator1 = "Select#SELECT_ID",
				selectFieldId = "caseTypeId",
				value1 = ${caseType});
		}

		if (isSet(component)) {
			Select(
				locator1 = "Select#SELECT_ID",
				selectFieldId = "componentId",
				value1 = ${component});
		}

		if (isSet(duration)) {
			PortletEntry.inputNumber(
				fieldLabel = "Estimated Duration",
				number = ${duration});
		}

		if (isSet(description)) {
			Type(
				locator1 = "TextArea#DESCRIPTION",
				value1 = ${description});
		}

		if (isSet(steps)) {
			Type(
				key_text = "steps",
				locator1 = "TextArea#ANY",
				value1 = ${steps});
		}

		Button.clickSave();
	}

	macro selectExportCases {
		Testray.selectCheckboxOptions(
			buttonText = "Select Cases",
			checkboxNameList = ${caseList},
			linkText = "Add Cases");

		if (${exportedCases} == "true") {
			Button.click(button = "Export");
		}
	}

}