definition {

	macro addUser {
		LexiconEntry.gotoAdd();

		if (isSet(userFirstNameEdit)) {
			Type(
				locator1 = "TextInput#FIRST_NAME",
				value1 = ${userFirstNameEdit});
		}

		if (isSet(userLastNameEdit)) {
			Type(
				locator1 = "TextInput#LAST_NAME",
				value1 = ${userLastNameEdit});
		}

		if (isSet(userEmailAddressEdit)) {
			Type(
				locator1 = "UsersAndOrganizationsEditUser#DETAILS_EMAIL_ADDRESS_FIELD",
				value1 = ${userEmailAddressEdit});
		}

		if (isSet(userScreenNameEdit)) {
			Type(
				locator1 = "TextInput#SCREEN_NAME",
				value1 = ${userScreenNameEdit});
		}

		if (isSet(userPassword)) {
			Type(
				locator1 = "OktaLogin#LOGIN_PASSWORD_FIELD",
				value1 = ${userPassword});
		}

		if (isSet(rePassword)) {
			Type(
				locator1 = "TestrayUser#CONFIRM_PASSWORD_2",
				value1 = ${rePassword});
		}

		for (var rolePermission : list ${rolePermissionList}) {
			Click(
				key_fieldLabel = ${rolePermission},
				locator1 = "Checkbox#CHECKBOX_LABEL");
		}

		Button.clickSave();
	}

	macro deleteUser {
		Button.clickNoError(button = "Delete User");

		AssertConfirm(value1 = "Are you sure you want to delete this item?");
	}

	macro editUserInformation {
		if (isSet(userFirstNameEdit)) {
			Type(
				locator1 = "TextInput#FIRST_NAME",
				value1 = ${userFirstNameEdit});
		}

		if (isSet(userLastNameEdit)) {
			Type(
				locator1 = "TextInput#LAST_NAME",
				value1 = ${userLastNameEdit});
		}

		if (isSet(userEmailAddressEdit)) {
			Type(
				locator1 = "UsersAndOrganizationsEditUser#DETAILS_EMAIL_ADDRESS_FIELD",
				value1 = ${userEmailAddressEdit});
		}

		if (isSet(userScreenNameEdit)) {
			Type(
				locator1 = "TextInput#SCREEN_NAME",
				value1 = ${userScreenNameEdit});
		}

		if (isSet(rolePermissionList)) {
			for (var rolePermission : list ${rolePermissionList}) {
				Click(
					key_fieldLabel = ${rolePermission},
					locator1 = "Checkbox#CHECKBOX_LABEL");
			}
		}

		Button.clickSave();
	}

	macro selectRolesPermissions {
		for (var rolePermission : list ${rolePermissionList}) {
			Click(
				key_fieldLabel = ${rolePermission},
				locator1 = "Checkbox#CHECKBOX_LABEL");
		}
	}

	macro viewUserInfomation {
		AssertTextEquals(
			locator1 = "TextInput#ANY_WITH_NAME",
			name = "familyName",
			value1 = ${lastName});

		AssertTextEquals(
			locator1 = "TextInput#ANY_WITH_NAME",
			name = "emailAddress",
			value1 = ${emailAddress});

		AssertTextEquals(
			locator1 = "TextInput#ANY_WITH_NAME",
			name = "alternateName",
			value1 = ${screenName});

		AssertTextEquals(
			locator1 = "TextInput#ANY_WITH_NAME",
			name = "givenName",
			value1 = ${firstName});
	}

}