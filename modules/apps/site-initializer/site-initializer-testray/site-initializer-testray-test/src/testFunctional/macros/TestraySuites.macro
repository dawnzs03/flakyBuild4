					locator1 = "Testray#PARAMETER_TYPE_OPTIONS",
					value1 = ${priorityNumber});

				Click(
					key_arrowDirection = "Right",
					key_caseParameters = "Available Priorities",
					locator1 = "Testray#ARROW_DIRECTION");
			}

			if (isSet(requirementName)) {
				Click(
					key_availableType = ${requirementName},
					key_caseParameters = "Available Requirements",
					locator1 = "Testray#PARAMETER_TYPE_OPTIONS",
					value1 = ${requirementName});

				Click(
					key_arrowDirection = "Right",
					key_caseParameters = "Available Requirements",
					locator1 = "Testray#ARROW_DIRECTION");
			}

			Testray.clickModalButton(button = "Select Cases");
		}

		if (isSet(caseList)) {
			Click(
				locator1 = "Button#BUTTON_WITH_VALUE",
				value = "Select Case");

			for (var caseName : list ${caseList}) {
				Check.checkToggleSwitch(
					key_checkboxOption = ${caseName},
					locator1 = "Checkbox#SPECIFIC_CHECKBOX_IN_TABLE");
			}

			Testray.clickModalButton(button = "Select Cases");
		}

		Button.clickSave();
	}

	macro editSuite {
		TestraySuites.createSuite(
			suiteDescription = ${newDescription},
			suiteName = ${newName});

		Button.clickSave();
	}

	macro verifyCaseParametersInSuite {
		AssertElementPresent(
			key_caseType = ${caseType},
			key_components = ${components},
			key_priority = ${priority},
			key_requirements = ${requirements},
			key_subComponents = ${subComponents},
			locator1 = "Testray#VIEW_CASE_PARAMETERS");
	}

}